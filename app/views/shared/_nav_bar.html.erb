<nav class="row justify-content-between m-1 bg-light-subtle">
  <h1 class="col-4">Simple Airbnb</h1>
  <div class="col-3">
    <%= form_with url: flats_path, method: :get, local: true, class: "mb-3" do %>
    <div class="input-group">
      <%= text_field_tag :query, params[:query], placeholder: "Search flats", class: "form-control" %>
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  <% end %>

  </div>
  <div class="col-4 text-end">
    <% if user_signed_in? %>
      <%= link_to 'My Flats', my_flats_path, class: 'btn btn-outline-primary' %>
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary m-1" %>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger m-1" %>


    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary m-1" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline-success m-1" %>
    <% end %>
  </div>
</nav>
